@font-face {
    font-family: 'MyriadProBoldCondensed';
    src: url(<%= asset_path('myriadpro-boldcond-webfont.eot') %>);
    src: url(<%= asset_path('myriadpro-boldcond-webfont.eot?#iefix') %>) format('embedded-opentype'),
         url(<%= asset_path('myriadpro-boldcond-webfont.woff') %>) format('woff'),
         url(<%= asset_path('myriadpro-boldcond-webfont.ttf') %>) format('truetype'),
         url(<%= asset_path('myriadpro-boldcond-webfont.svg#MyriadProBoldCondensed') %>) format('svg');
    font-weight: normal;
    font-style: normal;

}

@font-face {
    font-family: 'MyriadProCondensedItalic';
    src: url(<%= asset_path('myriadpro-condit-webfont.eot') %>);
    src: url(<%= asset_path('myriadpro-condit-webfont.eot?#iefix') %>) format('embedded-opentype'),
         url(<%= asset_path('myriadpro-condit-webfont.woff') %>) format('woff'),
         url(<%= asset_path('myriadpro-condit-webfont.ttf') %>) format('truetype'),
         url(<%= asset_path('myriadpro-condit-webfont.svg#MyriadProCondensedItalic') %>) format('svg');
    font-weight: normal;
    font-style: normal;

}