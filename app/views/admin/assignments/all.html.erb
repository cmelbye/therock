<div class="page-header">
    <h1>All assignments</h1>
</div>

<% if @assignments.size > 0 %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Status</th>
      <th>Summary</th>
      <th>Due</th>
      <th>Assigned to</th>
      <th>Assigned by</th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |assignment| -%>
    <tr>
      <td><span class="label label-important">Open</span></td>
      <td><%= link_to assignment.summary, [:admin, assignment] %></td>
      <td><%= assignment.due %></td>
      <td>Charlie</td>
      <td>Kayla</td>
    </tr>
    <% end -%>
  </tbody>
</table>
<% else %>
<div class="missing-data">
  <h1>No assignments have been created yet.</h1>
</div>
<% end %>