<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th style="width: 280px">Name</th>
      <th>Contributors</th>
      <th>Last modified</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| -%>
    <tr>
      <td><%= link_to document.name, edit_admin_document_path(document) %></td>
      <td><%= document.pretty_contributors %></td>
      <td><%= time_ago_in_words(document.updated_at) %> ago</td>
    </tr>
    <% end -%>
  </tbody>
</table>