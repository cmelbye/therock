
<div class="clearfix">
   <%= f.label :name, t("activerecord.attributes.document.name", :default => "Name"), :class => :label %>
  <div class="input">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :body, t("activerecord.attributes.document.body", :default => "Body"), :class => :label %>
  <div class="input">
    <%= f.text_area :body, :class => 'text_area' %>
  </div>
</div>
<div class="actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", documents_path %>
</div>
