        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Write
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Documents", admin_documents_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Media
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Photos", admin_photosets_path %></li>
            </ul>
          </li>
          <!--<li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Plan
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Assignments", "#" %></li>
              <li><%= link_to "Calendar", "#" %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Layout
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
