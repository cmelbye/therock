  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>-controller <%= controller.action_name %>-action">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
