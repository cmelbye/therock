          </li>-->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            	Organize
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "People", admin_users_path %></li>
              <li><%= link_to "Sections", admin_sections_path %></li>
            </ul>
          </li>
        </ul>
				
				<ul class="nav pull-right">
				<% if logged_in? %>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to "Edit profile", edit_admin_user_path(current_user) %></li>
							<li class="divider"></li>
							<li><%= link_to "Log out", logout_path %></li>
						</ul>
					</li>
				<% else %>
					<li><%= link_to "Log in", "/auth/google_oauth2" %></li>
				<% end %>
				</ul>
        </div>
      </div>
    </div>
  </div>
  <% if content_for?(:sidebar) %>
  <div class="span3 sidebar">
    <%= yield :sidebar %>
  </div>
  <% end %>
  <div class="container-fluid">
    <%= content_for?(:content) ? yield(:content) : yield %>
  </div>
  <%= yield :outer_content %>
  <%= yield :js %>
</body>
</html>
