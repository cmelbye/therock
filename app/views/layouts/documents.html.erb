<% content_for :content do %>
<div class="row">
	<div class="span3">
		<h2 style="margin-bottom: 5px;">Documents</h2>
		<div class="well" style="padding: 8px 0;">
			<ul class="nav nav-list">
				<%= nav_item("New Document", new_admin_document_path, :icon => "icon-plus") %>
				<li class="nav-header">Filters</li>
				<%= nav_item("My Documents", admin_documents_path, :icon => "icon-folder-open") %>
				<%= nav_item("All Documents", all_admin_documents_path, :icon => "icon-list") %>
			</ul>
		</div>
	</div>
	<div class="span9">
		<% if flash[:notice] %><div class="alert alert-success"><%= flash[:notice].html_safe %></div><% end %>
		<%= yield %>
	</div>
</div>
<% end %>

<%= render :template => "layouts/application" %>